<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="First time setup required"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="You need to set up your PC to receive commands from this app first before you use it"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView2"
        android:layout_alignRight="@+id/TextView2"
        android:layout_below="@+id/TextView2"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="(1) Download the client app installer from http://goo.gl/5YnnLm\n(2) Double click on the installer file (pcqc_beta_setup.exe) and install the app\n\ (3) Run the app, type your username and click Save and Continue\n (4) That&apos;s it! You can now send commands"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_purple"
        android:textSize="16sp" />

    <Button
        android:id="@+id/SaveButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView3"
        android:layout_alignRight="@+id/TextView3"
        android:layout_below="@+id/TextView3"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_flat_blue"
        android:fontFamily="sans-serif-condensed"
        android:onClick="Thanks"
        android:padding="10dp"
        android:paddingBottom="13dp"
        android:text="Ok, thanks!"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>